.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 游戏信息区域样式 */
.game-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.player-info, .ai-info {
  flex: 1;
  padding: 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.player-info.active, .ai-info.active {
  background-color: #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.player-name, .ai-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.color-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  display: inline-block;
}

.color-indicator.black {
  background-color: #000;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.color-indicator.white {
  background-color: #fff;
  border: 2rpx solid #000;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.player-stats, .ai-stats {
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.vs {
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
  margin: 0 20rpx;
}

/* 错误信息样式 */
.error-message {
  width: 100%;
  padding: 20rpx;
  background-color: #ffebee;
  color: #c62828;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 棋盘区域样式 */
.board-container {
  position: relative;
  width: 100%;
  max-width: 750rpx;
  aspect-ratio: 1;
  margin: 20rpx 0;
  background-color: #DEB887;
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
}

.board-container.loading {
  opacity: 0.7;
  pointer-events: none;
}

.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.thinking-time {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.coordinate-letters {
  display: flex;
  justify-content: space-around;
  padding: 10rpx 0;
  height: 40rpx;
}

.coordinate-numbers {
  position: absolute;
  left: -40rpx;
  top: 0;
  height: 100%;
  display: flex;
  flex-direction: column;
  justify-content: space-around;
}

.coordinate-text {
  font-size: 24rpx;
  color: #333;
  font-weight: bold;
}

.board {
  flex: 1;
  position: relative;
  padding: 20rpx;
}

.board-grid {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.board-row {
  flex: 1;
  display: flex;
}

.board-cell {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.grid-line {
  position: absolute;
  background-color: #000;
}

.grid-line.horizontal {
  width: 100%;
  height: 2rpx;
  top: 50%;
}

.grid-line.vertical {
  height: 100%;
  width: 2rpx;
  left: 50%;
}

.stone {
  width: 80%;
  height: 80%;
  border-radius: 50%;
  position: absolute;
  z-index: 1;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
}

.stone.black {
  background: radial-gradient(circle at 30% 30%, #666, #000);
}

.stone.white {
  background: radial-gradient(circle at 30% 30%, #fff, #ddd);
  border: 2rpx solid #ccc;
}

/* AI分析区域样式 */
.ai-analysis {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.win-probability {
  font-size: 28rpx;
  color: #2196f3;
}

.analysis-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.variations {
  margin-top: 20rpx;
}

.variations-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.variation-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
}

.variation-item .move {
  color: #007AFF;
  font-weight: bold;
}

.variation-item .score {
  color: #666;
}

/* 控制按钮区域样式 */
.controls {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.difficulty-selector {
  margin-bottom: 20rpx;
}

.difficulty-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.difficulty-btn {
  flex: 1;
  min-width: 120rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border: none;
  border-radius: 6rpx;
  color: #333;
}

.difficulty-btn.active {
  background-color: #2196f3;
  color: #fff;
}

.difficulty-btn[disabled] {
  opacity: 0.5;
  background-color: #f0f0f0;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  background-color: #f5f5f5;
  border: none;
  border-radius: 6rpx;
  color: #333;
}

.action-btn:active {
  background-color: #e0e0e0;
}

.action-btn[disabled] {
  opacity: 0.5;
  background-color: #ccc;
}

/* 最后一步坐标显示 */
.last-move {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.last-move-label {
  font-size: 28rpx;
  color: #666;
}

.last-move-coord {
  font-size: 32rpx;
  color: #007AFF;
  font-weight: bold;
  font-family: monospace;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .stone {
    width: 85%;
    height: 85%;
  }
  
  .coordinate-text {
    font-size: 20rpx;
  }
  
  .difficulty-btn {
    min-width: 100rpx;
    font-size: 22rpx;
  }
  
  .action-btn {
    font-size: 24rpx;
    padding: 12rpx 24rpx;
  }
} 