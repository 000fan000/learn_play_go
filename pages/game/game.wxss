.container {
  padding: 20rpx;
  display: flex;
  flex-direction: column;
  align-items: center;
  background-color: #f5f5f5;
  min-height: 100vh;
}

/* 游戏信息区域样式 */
.game-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 10rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.player-info, .ai-info {
  flex: 1;
  padding: 10rpx;
  border-radius: 8rpx;
  transition: all 0.3s ease;
}

.player-info.active, .ai-info.active {
  background-color: #f0f0f0;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.1);
}

.player-name, .ai-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.color-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  display: inline-block;
}

.color-indicator.black {
  background-color: #000;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.color-indicator.white {
  background-color: #fff;
  border: 2rpx solid #000;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.player-stats, .ai-stats {
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.vs {
  font-size: 32rpx;
  font-weight: bold;
  color: #666;
  margin: 0 20rpx;
}

/* 错误信息样式 */
.error-message {
  width: 100%;
  padding: 20rpx;
  background-color: #ffebee;
  color: #c62828;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

/* 棋盘区域样式 */
.board-container {
  position: relative;
  width: 600rpx;  /* Fixed width */
  height: 600rpx; /* Fixed height */
  margin: 20rpx auto;
  background: linear-gradient(135deg, #E6C9A8 0%, #DEB887 100%);
  border-radius: 10rpx;
  box-shadow: 0 4rpx 20rpx rgba(0, 0, 0, 0.15);
  display: flex;
  flex-direction: column;
  padding: 40rpx;
}


.board-container.loading {
  opacity: 0.7;
  pointer-events: none;
}

.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background: rgba(255, 255, 255, 0.9);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 2;
}

.loading-spinner {
  width: 80rpx;
  height: 80rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #3498db;
  border-radius: 50%;
  animation: spin 1s linear infinite;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  margin-top: 20rpx;
  font-size: 28rpx;
  color: #333;
}

.thinking-time {
  margin-top: 10rpx;
  font-size: 24rpx;
  color: #666;
}

.coordinate-letters {
  position: absolute;
  top: 0;
  left: 60rpx;  /* Match board padding */
  right: 40rpx; /* Match board padding */
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  padding: 0;
  z-index: 10;
  pointer-events: none;
}

.coordinate-numbers {
  position: absolute;
  left: 0;
  top: 60rpx;  /* Match board padding */
  bottom: 40rpx; /* Match board padding */
  width: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 0;
  z-index: 10;
  pointer-events: none;
}

.coordinate-text {
  font-size: 24rpx;
  color: #666666;
  font-weight: bold;
  text-shadow: 0 1rpx 2rpx rgba(255, 255, 255, 0.8);
  min-width: 24rpx;
  text-align: center;
  opacity: 1;
  line-height: 1;
  display: block;
}

/* Update coordinate positioning for different board sizes */
.board-container[data-size="9"] .coordinate-letters {
  top: 10rpx;
  left: 64rpx;
  right: 60rpx;
}

.board-container[data-size="13"] .coordinate-letters {
  top: 10rpx;
  left: 52rpx;
  right: 50rpx;
}

.board-container[data-size="19"] .coordinate-letters {
  top: 10rpx;
  left: 45rpx;
  right: 42rpx;
}

.board-container[data-size="9"] .coordinate-numbers {
  left: 0;
  top: 64rpx;
  bottom: 60rpx;
}

.board-container[data-size="13"] .coordinate-numbers {
  left: 0;
  top: 52rpx;
  bottom: 50rpx;
}

.board-container[data-size="19"] .coordinate-numbers {
  left: 0;
  top: 45rpx;
  bottom: 42rpx;
}

.board {
  width: 100%;
  height: 100%;
  flex: 1;
  position: relative;
  background-color: #DEB887;
  border: 2rpx solid #000;
  display: flex;
  flex-direction: column;
}

.board-grid {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.board-row {
  flex: 1;
  display: flex;
  position: relative;
}

.board-cell {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
  aspect-ratio: 1;
}

.board-row:first-child .grid-line.horizontal {
  top: 0;
}

.board-row:last-child .grid-line.horizontal {
  bottom: 0;
}

.board-cell:first-child .grid-line.vertical {
  left: 0;
}

.board-cell:last-child .grid-line.vertical {
  right: 0;
}

.grid-line {
  position: absolute;
  background-color: rgba(0, 0, 0, 0.8);
  z-index: 1;
}

.grid-line.horizontal {
  width: 100%;
  height: 1px;
  top: 0;
}

.grid-line.vertical {
  height: 100%;
  width: 1px;
  left: 0;
}

/* Adjust coordinate text size based on board size */
.board-container[data-size="9"] .coordinate-text {
  font-size: 24rpx;
}

.board-container[data-size="13"] .coordinate-text {
  font-size: 22rpx;
}

.board-container[data-size="19"] .coordinate-text {
  font-size: 20rpx;
}

.stone {
  width: 85%;
  height: 85%;
  border-radius: 50%;
  position: absolute;
  z-index: 1;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2);
  transition: transform 0.2s ease;
}

.stone.black {
  background: radial-gradient(circle at 30% 30%, #666, #000);
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.3),
              inset 2rpx 2rpx 4rpx rgba(255, 255, 255, 0.2);
}

.stone.white {
  background: radial-gradient(circle at 30% 30%, #fff, #ddd);
  border: 2rpx solid #ccc;
  box-shadow: 0 2rpx 8rpx rgba(0, 0, 0, 0.2),
              inset 2rpx 2rpx 4rpx rgba(255, 255, 255, 0.8);
}

/* AI分析区域样式 */
.ai-analysis {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 10rpx;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.win-probability {
  font-size: 28rpx;
  color: #2196f3;
}

.analysis-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.variations {
  margin-top: 20rpx;
}

.variations-title {
  font-size: 28rpx;
  font-weight: bold;
  color: #333;
  margin-bottom: 10rpx;
}

.variation-item {
  display: flex;
  justify-content: space-between;
  padding: 10rpx;
  background-color: #f5f5f5;
  border-radius: 6rpx;
  margin-bottom: 10rpx;
}

.variation-item .move {
  color: #007AFF;
  font-weight: bold;
}

.variation-item .score {
  color: #666;
}

/* 控制按钮区域样式 */
.controls {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
}

.difficulty-selector {
  margin-bottom: 20rpx;
}

.difficulty-buttons {
  display: flex;
  flex-wrap: wrap;
  gap: 10rpx;
  margin-top: 10rpx;
}

.difficulty-btn {
  flex: 1;
  min-width: 120rpx;
  font-size: 24rpx;
  padding: 10rpx 20rpx;
  background-color: #f5f5f5;
  border: none;
  border-radius: 6rpx;
  color: #333;
}

.difficulty-btn.active {
  background-color: #2196f3;
  color: #fff;
}

.difficulty-btn[disabled] {
  opacity: 0.5;
  background-color: #f0f0f0;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 15rpx 30rpx;
  background-color: #f5f5f5;
  border: none;
  border-radius: 6rpx;
  color: #333;
}

.action-btn:active {
  background-color: #e0e0e0;
}

.action-btn[disabled] {
  opacity: 0.5;
  background-color: #ccc;
}

/* 最后一步坐标显示 */
.last-move {
  width: 100%;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 8rpx;
  margin-bottom: 20rpx;
  text-align: center;
}

.last-move-label {
  font-size: 28rpx;
  color: #666;
}

.last-move-coord {
  font-size: 32rpx;
  color: #007AFF;
  font-weight: bold;
  font-family: monospace;
}

/* 响应式调整 */
@media screen and (max-width: 375px) {
  .board-container {
    width: calc(100% - 60rpx);
    padding: 30rpx 15rpx 15rpx 30rpx;
  }
  
  .board-container[data-size="9"] {
    width: calc(100% - 110rpx);
    padding: 65rpx 45rpx 45rpx 65rpx;
  }
  
  .board-container[data-size="13"] {
    width: calc(100% - 90rpx);
    padding: 55rpx 35rpx 35rpx 55rpx;
  }
  
  .board-container[data-size="19"] {
    width: calc(100% - 80rpx);
    padding: 50rpx 30rpx 30rpx 50rpx;
  }
  
  .coordinate-letters {
    left: 30rpx;
    right: 15rpx;
    height: 25rpx;
  }
  
  .coordinate-numbers {
    left: 0;
    top: 30rpx;
    bottom: 15rpx;
    width: 25rpx;
  }
  
  .coordinate-text {
    font-size: 20rpx;
    min-width: 20rpx;
  }
  
  .stone {
    width: 80%;
    height: 80%;
  }
} 