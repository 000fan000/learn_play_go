.container {
  padding: 20rpx;
  background-color: #f5f5f5;
  min-height: 100vh;
  display: flex;
  flex-direction: column;
  align-items: center;
}

/* 游戏信息区域样式 */
.game-info {
  width: 100%;
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  margin-bottom: 20rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.player-info, .ai-info {
  flex: 1;
  text-align: center;
  padding: 16rpx;
  border-radius: 12rpx;
  transition: all 0.3s ease;
}

.player-info.active, .ai-info.active {
  background-color: rgba(0, 122, 255, 0.1);
  box-shadow: 0 0 0 2rpx #007AFF;
}

.player-name, .ai-name {
  font-size: 32rpx;
  font-weight: bold;
  margin-bottom: 10rpx;
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.color-indicator {
  width: 24rpx;
  height: 24rpx;
  border-radius: 50%;
  display: inline-block;
}

.color-indicator.black {
  background-color: #000;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.color-indicator.white {
  background-color: #fff;
  border: 2rpx solid #000;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.player-stats, .ai-stats {
  font-size: 24rpx;
  color: #666;
  display: flex;
  flex-direction: column;
  gap: 6rpx;
}

.vs {
  font-size: 36rpx;
  font-weight: bold;
  color: #333;
  margin: 0 20rpx;
}

/* 错误信息样式 */
.error-message {
  width: 100%;
  padding: 16rpx;
  margin-bottom: 20rpx;
  background-color: #fff2f0;
  border: 2rpx solid #ffccc7;
  border-radius: 16rpx;
  color: #ff4d4f;
  font-size: 28rpx;
  text-align: center;
}

/* 棋盘区域样式 */
.board-container {
  width: 100%;
  aspect-ratio: 1;
  /* Reduce padding to make space smaller */
  padding: 10rpx; 
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  position: relative;
}

.board-container.loading {
  opacity: 0.7;
  pointer-events: none;
}

.loading-mask {
  position: absolute;
  top: 0;
  left: 0;
  right: 0;
  bottom: 0;
  background-color: rgba(255, 255, 255, 0.8);
  display: flex;
  flex-direction: column;
  justify-content: center;
  align-items: center;
  z-index: 10;
}

.loading-spinner {
  width: 60rpx;
  height: 60rpx;
  border: 6rpx solid #f3f3f3;
  border-top: 6rpx solid #007AFF;
  border-radius: 50%;
  animation: spin 1s linear infinite;
  margin-bottom: 20rpx;
}

@keyframes spin {
  0% { transform: rotate(0deg); }
  100% { transform: rotate(360deg); }
}

.loading-text {
  font-size: 32rpx;
  color: #333;
  margin-bottom: 12rpx;
}

.thinking-time {
  font-size: 28rpx;
  color: #666;
  font-family: monospace;
}

.coordinate-numbers {
  position: absolute;
  left: 0;
  top: 40rpx;
  bottom: 0;
  width: 40rpx;
  display: flex;
  flex-direction: column;
  justify-content: space-between;
  padding: 20rpx 0;
  z-index: 2;
}

.coordinate-letters {
  position: absolute;
  left: 40rpx;
  right: 0;
  top: 0;
  height: 40rpx;
  display: flex;
  justify-content: space-between;
  padding: 0 20rpx;
  z-index: 2;
}

.coordinate-text {
  font-size: 24rpx;
  color: #666;
  font-weight: bold;
}

.board {
  width: calc(100% - 40rpx);
  height: calc(100% - 40rpx);
  margin: 40rpx 0 0 40rpx;
  position: relative;
  background-color: #DEB887;
  border-radius: 8rpx;
  overflow: hidden;
}

.board-grid {
  width: 100%;
  height: 100%;
  display: flex;
  flex-direction: column;
}

.board-row {
  flex: 1;
  display: flex;
  position: relative;
}

.board-cell {
  flex: 1;
  position: relative;
  display: flex;
  justify-content: center;
  align-items: center;
}

.grid-line {
  position: absolute;
  background-color: #000;
}

.grid-line.horizontal {
  width: 100%;
  height: 2rpx;
  top: 50%;
  left: 0;
}

.grid-line.vertical {
  width: 2rpx;
  height: 100%;
  left: 50%;
  top: 0;
}

.stone {
  width: 80%;
  height: 80%;
  border-radius: 50%;
  z-index: 1;
  position: absolute;
}

.stone.black {
  background-color: #000;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

.stone.white {
  background-color: #fff;
  box-shadow: 0 2rpx 4rpx rgba(0, 0, 0, 0.3);
}

/* AI分析区域样式 */
.ai-analysis {
  width: 100%;
  margin: 20rpx 0;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.analysis-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 16rpx;
}

.analysis-title {
  font-size: 32rpx;
  font-weight: bold;
  color: #333;
}

.win-probability {
  font-size: 28rpx;
  color: #007AFF;
  font-weight: bold;
}

.analysis-content {
  font-size: 28rpx;
  color: #666;
  line-height: 1.6;
  margin-bottom: 16rpx;
}

.variations {
  margin-top: 16rpx;
  padding-top: 16rpx;
  border-top: 2rpx solid #eee;
}

.variations-title {
  font-size: 28rpx;
  color: #333;
  font-weight: bold;
  margin-bottom: 12rpx;
  display: block;
}

.variation-item {
  display: flex;
  justify-content: space-between;
  align-items: center;
  padding: 8rpx 0;
  font-size: 26rpx;
}

.variation-item .move {
  color: #007AFF;
  font-weight: bold;
}

.variation-item .score {
  color: #666;
}

/* 控制按钮区域样式 */
.controls {
  width: 100%;
  margin-top: 20rpx;
  padding: 20rpx;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
}

.difficulty-selector {
  margin-bottom: 20rpx;
}

.difficulty-buttons {
  display: flex;
  gap: 10rpx;
  margin-top: 10rpx;
}

.difficulty-btn {
  flex: 1;
  font-size: 24rpx;
  padding: 10rpx;
  background-color: #f0f0f0;
  border: none;
  border-radius: 8rpx;
}

.difficulty-btn.active {
  background-color: #007AFF;
  color: #fff;
}

.difficulty-btn[disabled] {
  opacity: 0.5;
  background-color: #f0f0f0;
}

.action-buttons {
  display: flex;
  gap: 20rpx;
}

.action-btn {
  flex: 1;
  font-size: 28rpx;
  padding: 16rpx;
  background-color: #007AFF;
  color: #fff;
  border: none;
  border-radius: 8rpx;
}

.action-btn:active {
  opacity: 0.8;
}

.action-btn[disabled] {
  opacity: 0.5;
  background-color: #ccc;
}

/* 最后一步坐标显示 */
.last-move {
  width: 100%;
  padding: 16rpx;
  margin: 20rpx 0;
  background-color: #fff;
  border-radius: 16rpx;
  box-shadow: 0 2rpx 10rpx rgba(0, 0, 0, 0.1);
  display: flex;
  align-items: center;
  justify-content: center;
  gap: 12rpx;
}

.last-move-label {
  font-size: 28rpx;
  color: #666;
}

.last-move-coord {
  font-size: 32rpx;
  color: #007AFF;
  font-weight: bold;
  font-family: monospace;
} 